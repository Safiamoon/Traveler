{% extends 'base.html.twig' %}

{% block title %}Destination{% endblock %}

{% block body %}
    <h1>Destination<span class="badge badge-info">{{ destination.latitude }} / {{ destination.Ing }}</span></h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Ville</th>
                <td>{{ destination.Ville }}</td>
            </tr>
            <tr>
                <th>Pays</th>
                <td>{{ destination.Pays.nom }}</td>
            </tr>
            <tr>
                <th>DateCreation</th>
                <td>{{ destination.DateCreation ? destination.DateCreation|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdateDate</th>
                <td>{{ destination.UpdateDate ? destination.UpdateDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_destination_index') }}">back to list</a>

    <a href="{{ path('admin_destination_edit', {'id': destination.id}) }}">edit</a>

    {{ include('admin/destination/_delete_form.html.twig') }}
{% endblock %}
