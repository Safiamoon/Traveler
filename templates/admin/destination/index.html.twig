{% extends 'base.html.twig' %}

{% block title %}Destination index{% endblock %}

{% block body %}
    <h1>Destination index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Ville</th>
                <th>Pays</th>
                <th>Latitude</th>
                <th>Ing</th>
                <th>DateCreation</th>
                <th>UpdateDate</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for destination in destinations %}
            <tr>
                <td>{{ destination.id }}</td>
                <td>{{ destination.Ville }}</td>
                <td>{{ destination.Pays }}</td>
                <td>{{ destination.Latitude }}</td>
                <td>{{ destination.Ing }}</td>
                <td>{{ destination.DateCreation ? destination.DateCreation|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ destination.UpdateDate ? destination.UpdateDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('admin_destination_show', {'id': destination.id}) }}">show</a>
                    <a href="{{ path('admin_destination_edit', {'id': destination.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_destination_new') }}">Create new</a>
{% endblock %}
